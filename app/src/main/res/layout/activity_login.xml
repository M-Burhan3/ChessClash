<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login2"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#EBE3E3"
        android:text="Login"
        android:textColor="#262525"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:icon="@drawable/common_google_signin_btn_icon_dark"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />

    <ImageView
        android:id="@+id/fondo_negro_login"
        android:layout_width="0dp"
        android:layout_height="149dp"
        android:layout_marginTop="58dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo_negro" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="336dp"
        android:layout_height="84dp"
        app:layout_constraintEnd_toEndOf="@+id/fondo_negro_login"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/fondo_negro_login"
        app:layout_constraintTop_toTopOf="@+id/fondo_negro_login"
        app:layout_constraintBottom_toBottomOf="@+id/fondo_negro_login"
        app:srcCompat="@drawable/logo_login"
        tools:layout_editor_absoluteY="85dp" />


</androidx.constraintlayout.widget.ConstraintLayout>